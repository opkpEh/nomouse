{
  "manifest_version": 3,
  "name": "NoMouse",
  "version": "1.0",

  "permissions": ["tabs"],

  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ],

  "action": {
    "default_popup": "src/popup/index.html"
  }
}
