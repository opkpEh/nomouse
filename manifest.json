{
  "manifest_version": 3,
  "name": "no mouse",
  "version": "1.0.0",
  "description": "to keep your hands on keyboard",
  "permissions": [],
  "action":{
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js":["src/content/index.js"]
    }
  ]
}
